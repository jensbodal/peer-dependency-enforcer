{
  "name": "@jensbodal/peer-dependency-enforcer",
  "version": "0.2.1",
  "description": "Peer dependency enforcement utils",
  "author": "Jens Bodal",
  "license": "MIT",
  "private": false,
  "repository": "https://github.com/jensbodal/peer-dependency-enforcer",
  "files": [
    "bin/",
    "lib/"
  ],
  "main": "./lib/index.js",
  "bin": {
    "peer-dependency-enforcer": "./bin/peer-dependency-enforcer",
    "pde": "./bin/peer-dependency-enforcer"
  },
  "scripts": {
    "build": "rm -rf lib && npm run lint && npm run format:check && tsc",
    "fix": "npm run format && npm run lint:fix",
    "format": "prettier --write \"**/*.{ts,js}\"",
    "format:check": "prettier --list-different \"**/*.{ts,js}\"",
    "lint": "tslint --project tsconfig.json",
    "lint:fix": "npm run lint -- --fix",
    "prepack": "npm run build",
    "watch": "tsc --watch",
    "test": "none"
  },
  "dependencies": {
    "semver": "^5.7.1",
    "yargs": "^14.2.0"
  },
  "devDependencies": {
    "@types/node": "12.7.12",
    "@types/semver": "~6.0.2",
    "@types/yargs": "~13.0.3",
    "prettier": "1.18.2",
    "ts-node": "~8.4.1",
    "tslint": "5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "~3.6.4"
  }
}
